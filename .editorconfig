root = true

# General settings
[*.cs]
# Put open brace on the same line for methods, properties, control blocks, types (K&R style)
csharp_new_line_before_open_brace = none

# Place else/catch/finally on same line as the previous closing brace (K&R style)
csharp_new_line_before_else = false
csharp_new_line_before_catch = false
csharp_new_line_before_finally = false

# Keep single-line blocks/statements on a single line where appropriate
csharp_preserve_single_line_blocks = true
csharp_preserve_single_line_statements = true

# Optional: prefer 4-space indentation
indent_style = space
indent_size = 4
